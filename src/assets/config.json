{
  "recordTypes": [
    "dataset",
    "person"
  ],
  "dataset": {
    "solrUrl": "http://localhost:8980/",
    "mainQuery": "?q=record_type_s:dataset AND (<%= queryFields %>)<%= fieldList %>,[child%20parentFilter=record_type_s:dataset]&rows=<%= rows %>&start=<%= start %><%= facetFields %>",
    "queryFieldsBoolOperator": " OR ",
    "queryFieldValPrefix": "",
    "queryFieldValSuffix": "",
    "queryFields": [
      "main_search"
    ],
    "fieldList": "&fl=*",
    "rows": 10,
    "paginationSize": 10,
    "searchFilters": [
      {
        "name": "https___schema_org_keywords_facet_multi",
        "title": "search-refine-keywords",
        "type": "facet",
        "typeLabel": null,
        "alwaysActive": true
      },
      {
        "name": "https___schema_org_publisher_facet",
        "title": "search-refine-publisher",
        "type": "facet",
        "typeLabel": null,
        "alwaysActive": true
      }
    ]
  },
  "person": {
    "solrUrl": "http://localhost:8980/",
    "mainQuery": "?q=record_type_s:person AND (<%= queryFields %>)<%= fieldList %>&rows=<%= rows %>&start=<%= start %><%= facetFields %>",
    "queryFieldsBoolOperator": " OR ",
    "queryFieldValPrefix": "",
    "queryFieldValSuffix": "",
    "queryFields": [
      "main_search"
    ],
    "fieldList": "&fl=*",
    "rows": 10,
    "paginationSize": 10,
    "searchFilters": [
      {
        "name": "https___schema_org_birthPlace_facet",
        "title": "search-refine-birthPlace",
        "type": "facet",
        "typeLabel": null,
        "alwaysActive": true
      },
      {
        "name": "https___schema_org_birthDate_facet",
        "title": "search-refine-birthDate",
        "type": "facet",
        "typeLabel": null,
        "alwaysActive": true
      }
    ],
    "searchResultDisplay": [
      {"link": true, "type": "external", "field": "id", "template": "<%= data['https___schema_org_name'] %>", "class":"text-justify" },
      {"template": "<p></p>" },
      {"template": "<p><%= data['https___schema_org_description'] %></p>",  "class":"text-justify" }
    ]
  },
  "defaultSearchResultDisplay": [
    {"link": true, "type": "external", "field": "id", "template": "<%= data['https___schema_org_name'] %>", "class":"text-justify" },
    {"template": "<p></p>" },
    {"template": "<p><%= data['https___schema_org_description'] %></p>",  "class":"text-justify" },
    {"template": "<p></p>" },
    {"template": "<p>Published: <%= moment(data['https___schema_org_datePublished'][0]) %> <%= !_.isEmpty(utilService.getChildDocWithType(data, 'https___schema_org_license', null)) ? '| License: ' + utilService.getChildDocWithType(data, 'https___schema_org_license')['https___schema_org_name'][0] : '' %></p>",  "class":"text-justify" }
  ]
}
